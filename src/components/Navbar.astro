---
import siteData from "site-config.json"
import ThemeIcon from './ThemeIcon.astro';
import Logo from "./Logo.astro";
---
<nav class="fixed top-0 left-0 w-full z-50 backdrop-blur-md bg-white/30 shadow-lg transition-all duration-300">
    <div class="max-w-6xl mx-auto px-4 py-3 flex items-center justify-between">
      <div class="flex items-center space-x-4">
        <Logo />
        <h1 id="siteNameId" class="text-3xl font text-gray-800 dark:text-amber-400 md:block hidden">{siteData.title}</h1>
      </div>
      
      <div class="flex items-center space-x-6">
        <nav class="flex space-x-4">
          <a href="/posts" class="text-gray-700 hover:text-blue-600 transition-colors">
            Posts
          </a>
          <a href="/about" class="text-gray-700 hover:text-blue-600 transition-colors">
            About
          </a>
          <a href="/book" class="text-gray-700 hover:text-blue-600 transition-colors">
            Book
          </a>
          <ThemeIcon />
        </nav>
      </div>
    </div>
  </nav>


<style>
nav {
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
}
</style>
