---
const fetchQuote = async () => {
  try {
    const response = await fetch('https://api.forismatic.com/api/1.0/?method=getQuote&format=json&lang=en');
    const data = await response.json();
    return { text: data.quoteText, author: data.quoteAuthor || 'Unknown' };
  } catch (error) {
    return { text: 'Failed to load quote.', author: 'Unknown' };
  }
};

const quote = await fetchQuote();
---

<div class="p-4 w-full rounded-xl bg-white/20 backdrop-blur-md">
  <p class="font-serif font-light italic">"{quote.text}"</p>
  <p class="mt-2 font-semibold">- {quote.author}</p>
</div>