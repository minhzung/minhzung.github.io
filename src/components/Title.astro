---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div id="title-container" class="relative w-full">
  
    <div class="max-w-4xl mx-auto pt-25">
        <h1 class="text-3xl font-semibold text-gray-900">{title}</h1>
    </div>
  
</div>

<script define:vars={{title}}>
  // Directly update the site name when the script loads
  const siteNameEl = document.getElementById('siteNameId');
  if (siteNameEl) {
    // Store original classes
    const originalClasses = siteNameEl.className;

    // Update text content
    siteNameEl.textContent = `${siteNameEl.textContent} | ${title}`;
    
    // Modify classes to reduce font size
    siteNameEl.className = `${originalClasses} text-lg`;
  }
</script>