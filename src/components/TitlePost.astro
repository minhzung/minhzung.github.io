---
interface Props {
  title: string;
}

const { title } = Astro.props;
---


<script define:vars={{title}}>
  // Directly update the site name when the script loads
  const siteNameEl = document.getElementById('siteNameId');
  if (siteNameEl) {
    // Store original classes
    const originalClasses = siteNameEl.className;

    // Update text content
    siteNameEl.textContent = ` | ${title}`;
    
    // Modify classes to reduce font size
    siteNameEl.className = `${originalClasses} text-lg`;
  }
</script>