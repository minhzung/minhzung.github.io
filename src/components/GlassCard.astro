---
import { Image } from "astro:assets"
const {
    data: { title, description, pubDate, image, category },
    slug,
} = Astro.props
---

<article>
    <div class="relative">
        <div>
            <Image
                src={image}
                alt={title}
                width="800"
                height="400"
                class="object-cover object-center h-64 sm:h-96 min-w-full"
            />
        </div>

        <div
            class="absolute top-24 left-8 h-1/2 w-1/2 bg-gray-600 rounded-2xl backdrop-blur-md bg-opacity-60 hover:backdrop-blur-sm"
        >
            <div
                class="text-white font-bold p-4 text-sm sm:text-base md:text-lg lg:text-xl"
            >
                <a href={"/posts/" + slug}>{title.toUpperCase()}</a>
            </div>
            <div
                class="px-4 text-white/70 hidden sm:block sm:text-sm md:text-base lg:text-lg"
            >
                <span class="font-mono pr-1">[Latest Post]</span>
                {description}
            </div>
        </div>
    </div>
</article>
